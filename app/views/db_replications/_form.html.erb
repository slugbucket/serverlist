<%= form_for(@db_replication) do |f| %>
  <% if @db_replication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@db_replication.errors.count, "error") %> prohibited this db_replication from being saved:</h2>

      <ul>
      <% @db_replication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: inline; float: left; width: 80%;">
    <fieldset><legend>Database replication details</legend>

      <div> <!-- wrapper around account details and help divs -->
  <div class="field" style="float: left;">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "serverlist" %>
  </div>
  <div class="field" style="float: left;">
    <%= f.label :db_repl_type_id, "Replication type" %><br />
    <%= f.collection_select :db_repl_type_id, DbReplType.order(:name), :id, :name, {:selected => @db_replication.db_repl_type_id, :prompt => 'Replication type', :class => "serverlist"} %>
  </div>
    <div class="field">
  	<%= f.label :db_repl_status_id, "Replication status" %><br />
    <%= f.collection_select :db_repl_status_id, DbReplStatus.order(:name), :id, :name, {:selected => @db_replication.db_repl_status_id, :prompt => 'Replication status', :class => "serverlist"} %>
  </div>
  <div style="clear: both;"></div>
  <div class="field" style="float: left;">
    <%= f.label :db_repl_host_id, "Replication host" %><br />
    <%= f.collection_select :db_repl_host_id, DbInstance.order(:name), :id, :name, {:selected => @db_replication.db_repl_host_id, :prompt => 'Replication host', :class => "serverlist"} %>
  </div>
  <div class="field">
    <%= f.label :db_repl_freq_id, "Replication frequency" %><br />
    <%= f.collection_select :db_repl_freq_id, DbReplFreq.order(:name), :id, :name, {:selected => @db_replication.db_repl_freq_id, :prompt => 'Replication frequency', :class => "serverlist"} %>
  </div>
  <div style="clear: both;"></div>
  <div class="field" style="float: left;">
    <%= f.label :db_repl_src_id, "Replication source" %><br />
    <%= f.collection_select :db_repl_src_id, DbInstanceDbName.order(:db_instance_id), :id, :db_inst_name, {:prompt => "Source database"} %>
  </div>
  <div style="clear: both;"></div>
  <div class="field">
    <%= f.label :db_repl_target_id, "Replication target" %><br />
    <%= f.collection_select  :db_repl_target_id, DbInstanceDbName.order(:db_instance_id), :id, :db_inst_name, {:prompt => "Target database"} %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 40, :rows => 6, :class => "mceEditor" %>
  </div>

  <div class="field">
    <%= f.label :application_id %><br />
    <%= f.collection_select :application_id, Application.order(:name), :id, :name, {:selected => @db_replication.application_id, :prompt => 'Application', :class => "serverlist"} %>
  </div>

      </div>
    </fieldset>
  <div style="clear: both;"></div>

  <div class="actions">
    <%= f.submit :class => "button" %>
  </div>
<% end %>
