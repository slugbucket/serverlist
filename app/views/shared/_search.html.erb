<div id="findbyname">
<%= form_tag("/"+controller_name, :method => 'get') do %>
    <label for="findbyname-field" class="overlabel">Search by name</label>
<%= text_field_tag :search, session[:search], :id => 'findbyname-field' %>
<%= submit_tag "Search", :name => nil, :class => "button" %> 
<%= link_to "Clear", "#", {:onclick => "$('#findbyname-field').val('')", :class => "search"} %>
<% end %>
</div>