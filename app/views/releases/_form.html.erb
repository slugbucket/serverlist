<%= form_for(@release) do |f| %>
  <% if @release.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>

      <ul>
      <% @release.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div style="display: inline; float: left; width: 80%;">
   <fieldset><legend>Release details</legend>
        <div> <!-- wrapper around account details and help divs -->
     <div class="field" style="float: left;">
            <%= f.label :name %><br />
      <%= f.text_field :name, :class => "serverlist" %>
     </div>
     <div style="display: inline; float: left;">
      <%= f.label :package_version_ids, "Package versions" %><br />
      <!-- %= f.text_field :package_version_tokens, {"data-pre" => @release.package_versions.map(&:attributes).to_json, :style => "width: 50%"} % -->
      <%= f.collection_select :package_version_ids, PackageVersion.order_by_package_name, :id, :package_version_name, {:selected => @release.package_version_ids}, {:multiple => true, :size => 6} %>
     </div>
        <div style="display: inline; float: left; width: 80%;">
         <div> <!-- wrapper around account details and help divs -->
     <div class="field" style="float: left;">
            <%= f.label :description %><br />
      <%= f.text_area :description, :class => "serverlist", :rows => 6, :cols => 80 %>
           </div>
         </div>
        </div>
   </fieldset>
  </div>
 <div style="clear: both;"></div>
 <div class="actions">
    <%= f.submit :class => "button" %>
 </div>
<% end %>
