<%= form_for(@warranty_contract) do |f| %>
  <% if @warranty_contract.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@warranty_contract.errors.count, "error") %> prohibited this warranty_contract from being saved:</h2>

      <ul>
      <% @warranty_contract.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: inline; float: left; width: 80%;">
    <fieldset><legend>Warranty contract details</legend>

      <div> <!-- wrapper around account details and help divs -->
  <div class="field" style="float: left;">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "serverlist" %>
  </div>
  <div class="field">
    <%= f.label :warranty_type_id %><br />
    <%= f.collection_select :warranty_type_id, WarrantyType.order(:name), :id, :name, {:selected => @warranty_contract.warranty_type_id, :prompt => 'Warranty type', :class => "serverlist"} %>
  </div>
  <div style="clear: both;"></div>
  <div class="field" style="float: left;">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6, :cols => 40, :class => "mceEditor" %>
  </div>
  <div style="clear: both;"></div>
  <div class="field" style="float: left;">
    <%= f.label :vendor_id %><br>
    <%= f.collection_select :vendor_id, Vendor.order(:name), :id, :name, {:selected => @warranty_contract.vendor_id, :prompt => 'Vendor', :class => "serverlist"} %>
  </div>
  <div style="clear: both;"></div>
  <div class="field" style="float: left;">
  
    <%= f.label :expiry %><br />
    <%= f.date_select :expiry %>
  </div>
    </fieldset>
    </div>
  <div style="clear: both;"></div>

  <div class="actions">
    <%= f.submit :class => "button" %>
  </div>
<% end %>