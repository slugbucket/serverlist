<%= form_for(@db_package) do |f| %>
  <% if @db_package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@db_package.errors.count, "error") %> prohibited this db_package from being saved:</h2>

      <ul>
      <% @db_package.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="display: inline; float: left; width: 80%;">
    <fieldset><legend>Database package details</legend>

      <div> <!-- wrapper around account details and help divs -->
  <div class="field" style="float: left;">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "serverlist" %>
  </div>
  <div style="clear: both;"></div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6, :cols => 40, :class => "mceEditor" %>
  </div>
  <div class="field">
    <%= f.label :db_package_type_id, "Package type" %><br>
    <%= f.collection_select :db_package_type_id, DbPackageType.order(:name), :id, :name, {:selected => @db_package.db_package_type_id, :prompt => 'Package type'} %>
  </div>
  <div class="field">
    <%= f.label :db_instance_db_name_id, "Target database" %><br>
    <%= f.collection_select  :db_instance_db_name_id, DbInstanceDbName.order(:db_instance_id), :id, :db_inst_name, {:prompt => "Target database"} %>
  </div>

      </div>
    </fieldset>
  <div style="clear: both;"></div>

  <div class="actions">
    <%= f.submit :class => "button" %>
  </div>
<% end %>